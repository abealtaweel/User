<h1>Listing accounts</h1>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Password</th>
      <th>SSN</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.email %></td>
        <td><%= account.password %></td>
        <td><%= account.ssn %></td>
        <td><%= link_to 'Show', account %></td>
        <td></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

